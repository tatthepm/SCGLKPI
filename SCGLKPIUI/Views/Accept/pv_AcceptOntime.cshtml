@using SCGLKPIUI.Models

@model IEnumerable<AcceptOntimeViewModels>

@{
    Layout = null;
}

<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    <b>DETAIL TABLE </b> [ Startdate : @ViewBag.Startdate - Enddate : @ViewBag.Enddate
                    |MatName: @ViewBag.MatName ]
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="acceptTender" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>ACCEPTED DATE</th>
                                    <th>DEMARTMENT</th>
                                    <th>SECTION</th>
                                    <th>MATNAME</th>
                                    @*<th>MATFRIGRP</th>*@
                                    <th>SUM OF ACCEPT</th>
                                    <th>ONTIME</th>
                                    <th>DELAY</th>
                                    <th>ADJUST</th>
                                    <th>%ACCEPT</th>
                                    <th>%ADJUST</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int itemNo = 1; }
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>@(itemNo++)</td>
                                        <td>@String.Format("{0:dd/MM/yyyy}", item.AcceptDate)</td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.SectionName</td>
                                        <td>@item.MatName</td>
                                        @*<td>@item.MatFriGrp</td>*@
                                        <td>@item.SumOfAccept</td>
                                        <td>@item.OnTime</td>
                                        <td>@item.Delay</td>
                                        <td>@item.AdjustAccept</td>
                                        <td>@String.Format("{0:n2}", item.Percent)%</td>
                                        <td>@String.Format("{0:n2}", item.PercentAdjust)%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
