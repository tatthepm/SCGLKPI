@using BOL
@model IEnumerable<MenuTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-lg">
    <div class="content">
        <div class="row">
            @{
                double allRec = (double)Model.Count() / 3;
                double row = Math.Ceiling(allRec);
                var q = from m in Model
                        select m;
                int itemNo = 1;
            }
            @for (int i = 0; i < row; i++) {
                var item = q.Take(3);
                foreach (var value in item) {
                    <div class="col-lg-4 animate-panel" data-child="hpanel" data-effect="fadeInRight">
                        <div class="hpanel">
                            <div class="panel-heading">
                                <div class="panel-tools">
                                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                    <a class="closebox"><i class="fa fa-times"></i></a>
                                </div>
                               On-time Accept Daily Chart # @itemNo
                            </div>
                            <div class="panel-body">
                                <div class="h-100">
                                    <a href="/AcceptChart/index?kpiId=@value.DepartmentId|@value.SectionId|@value.KPIId|@value.KPIFrequencyId" class="btn btn-danger btn-circle"><i class="fa fa-bar-chart"></i></a>
                                    @value.DepartmentName - @value.SectionName - @value.KpiName
                                </div>
                            </div>
                        </div>
                    </div>
                    itemNo++;

                }
                q = q.Skip(3);
            }
        </div>
    </div>
</div>


@section Styles {
    @Styles.Render("~/bundles/datatables/css")
    @Styles.Render("~/bundles/xeditable/css")
    @Styles.Render("~/bundles/select2/css")
    @Styles.Render("~/bundles/touchspin/css")
