@* filter by date*@
<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                <i class="pe-7s-filter"></i><span class="font-icon-name"> Filter by</span>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-1">@Html.Label("Segment")<span style="color:red">*</span></div>
                        <div class="col-md-2">
                            @Html.DropDownList("SegmentId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        <div class="col-md-1">@Html.Label("Shipping Point")</div>
                        <div class="col-md-2">
                            @Html.DropDownList("ShipPoint", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>

                        <div class="col-md-1">@Html.Label("Ship To")</div>
                        <div class="col-md-3">
                            @Html.DropDownList("ShipTo", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        
                    </div>
                    <div class="form-group">
                        <div class="col-md-1">@Html.Label("Truck Type")</div>
                        <div class="col-md-2">
                            @Html.DropDownList("TruckType", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        <div class="col-md-1">@Html.Label("FROM ", new { @style = "width:100%" })<span style="color:red">*</span></div>
                        <div class="col-md-2">
                            <div class="input-group date">
                                <input type="text" class="form-control" id="FromDateSearch" placeholder="YYYY/MM/DD" name="FromDateSearch"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                        <div class="col-md-1">@Html.Label("TO ", new { @style = "width:100%" })<span style="color:red">*</span></div>
                        <div class="col-md-2">
                            <div class="input-group date">
                                <input type="text" class="form-control" id="ToDateSearch" placeholder="YYYY/MM/DD" name="ToDateSearch"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                        @*<div class="col-md-1">@Html.Label("Tender User")<span style="color:red">*</span></div>
                        <div class="col-md-2">
                            @Html.DropDownList("TenderUser", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>*@
                        <div class="col-md-1">
                            <button class="ladda-button btn btn-success" data-style="slide-down" id="btnSearch"><span class="ladda-label">Submit</span><span class="ladda-spinner"></span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
