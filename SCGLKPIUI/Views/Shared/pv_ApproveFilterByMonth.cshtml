4d <div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                <i class="pe-7s-filter"></i><span class="font-icon-name"> Filter by</span>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-1">@Html.Label("DEP")<span style="color:red"> *</span></div>
                        <div class="col-md-3">
                            @Html.DropDownList("DepartmentId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        <div class="col-md-1">@Html.Label("SEC")<span style="color:red"> *</span></div>
                        <div class="col-md-3">
                            @Html.DropDownList("SectionId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        <div class="col-md-1">@Html.Label("MAT")<span style="color:red"> *</span></div>
                        <div class="col-md-2">
                            @Html.DropDownList("MatNameId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-1">@Html.Label("ADJUSTED REASON")<span style="color:red"> *</span></div>
                        <div class="col-md-3">
                            @Html.DropDownList("ReasonId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-1">@Html.Label("YEAR ")<span style="color:red"> *</span></div>
                        <div class="col-md-2">
                            @Html.DropDownList("YearId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        <div class="col-md-1">@Html.Label("MONTH ", new { @style = "width:100%" })<span style="color:red"> *</span></div>
                        <div class="col-md-2">
                            @Html.DropDownList("MonthId", null, "ALL", new { @class = "js-source-states", @style = "width: 100%" })
                        </div>
                        <div class="col-md-1">
                            <button class="ladda-button btn btn-success" data-style="slide-down" id="btnSearch"><span class="ladda-label">Submit</span><span class="ladda-spinner"></span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
