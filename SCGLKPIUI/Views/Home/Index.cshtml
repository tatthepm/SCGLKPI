@model SCGLKPIUI.Models.HomeModels
@{
    ViewBag.Title = "KPI Report";
    var currentDate = DateTime.Now;
}

<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12 text-center m-t-md">
            <h2>
                Welcome to SCG Logistics KPI Reports<br />
                @*<button class="btn btn-success btn-sm demo2" name="btnJson" id="btnJson">Run example</button>
                <button class="btn btn-primary" id="testJson">Test Json</button>*@
            </h2>
            <p>
                @*Special <strong>Admin Theme</strong> for small, medium and large webapp with very clean and aesthetic style and feel.*@
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Dashboard information and statistics
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="small">
                                <i class="fa fa-bolt"></i> Shipments
                            </div>
                            <div>
                                <h1 class="font-extra-bold m-t-xl m-b-xs">
                                    @Model.shipmentLastMonthCount
                                </h1>
                                <small>Shipment in last month   </small>
                            </div>
                            <div>
                                <h1 class="font-extra-bold m-t-xl m-b-xs">
                                    @Model.DNLastMonthCount
                                </h1>
                                <small>DN in last month</small>
                            </div>
                            <div class="small m-t-xl">
                                <i class="fa fa-clock-o"></i> Data from @Model.LastMonth @Model.Year
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center small">
                                <i class="fa fa-laptop"></i> DN and Shipment per month in @Model.LastMonth @Model.Year
                            </div>
                            <div class="flot-chart" style="height: 320px">
                                <div class="flot-chart-content" id="flot-line-chart"></div>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="small">
                                <i class="fa fa-clock-o"></i> Active duration
                            </div>
                            <div>
                                <h1 class="font-extra-bold m-t-xl m-b-xs">
                                    @Model.daysDIff Days
                                </h1>
                                @*<small>And four weeks</small>*@
                            </div>
                            <div class="small m-t-xl">
                                <i class="fa fa-clock-o"></i> Data since January 1, 2016
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <span class="pull-right">
                        @*You have two new messages from <a href="">Monica Bolt</a>*@
                    </span>
                    Last update:@currentDate
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="hpanel stats">
                <div class="panel-body h-200">
                    <div class="stats-title pull-left">
                        <h4>Order Tendered Last Month</h4>
                    </div>
                    <div class="stats-icon pull-right">
                        <i class="pe-7s-share fa-4x"></i>
                    </div>
                    <div class="m-t-xl">
                        <h3 class="m-b-xs">@Model.TenderLastMonthCount</h3>
                        <span class="font-bold no-margins">
                            Tendered Progress
                        </span>
                        <div class="progress m-t-xs full progress-small">
                            <div style="width: @Model.TenderLastMonthPercent%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="@Model.TenderLastMonthPercent" role="progressbar" class="progress-bar progress-bar-success">
                                <span class="sr-only">@Model.TenderLastMonthPercent</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-6">
                                <small class="stats-label">Ontime</small>
                                <h4>@Model.TenderLastMonthOntime</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Delay</small>
                                <h4>@Model.TenderLastMonthDelay</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <small class="stats-label">Pending</small>
                                <h4>@Model.TenderLastMonthPending</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Exclude</small>
                                <h4>@Model.TenderLastMonthExclude</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    This is standard panel footer
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="hpanel stats">
                <div class="panel-body h-200">
                    <div class="stats-title pull-left">
                        <h4>Tender Accepted Last Month</h4>
                    </div>
                    <div class="stats-icon pull-right">
                        <i class="pe-7s-share fa-4x"></i>
                    </div>
                    <div class="m-t-xl">
                        <h3 class="m-b-xs">@Model.AcceptLastMonthCount</h3>
                        <span class="font-bold no-margins">
                            Accepted Progress 
                        </span>
                        <div class="progress m-t-xs full progress-small">
                            <div style="width: @Model.AcceptLastMonthPercent%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="@Model.AcceptLastMonthPercent" role="progressbar" class="progress-bar progress-bar-success">
                                <span class="sr-only">@Model.AcceptLastMonthPercent</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-6">
                                <small class="stats-label">Ontime</small>
                                <h4>@Model.AcceptLastMonthOntime</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Delay</small>
                                <h4>@Model.AcceptLastMonthDelay</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <small class="stats-label">Pending</small>
                                <h4>@Model.AcceptLastMonthPending</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Exclude</small>
                                <h4>@Model.AcceptLastMonthExclude</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    This is standard panel footer
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="hpanel stats">
                <div class="panel-body h-200">
                    <div class="stats-title pull-left">
                        <h4>Order Delivered Last Month</h4>
                    </div>
                    <div class="stats-icon pull-right">
                        <i class="pe-7s-share fa-4x"></i>
                    </div>
                    <div class="m-t-xl">
                        <h3 class="m-b-xs">@Model.DeliveryLastMonthCount</h3>
                        <span class="font-bold no-margins">
                            Delivery Progress
                        </span>
                        <div class="progress m-t-xs full progress-small">
                            <div style="width: @Model.DeliveryLastMonthPercent%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="@Model.DeliveryLastMonthPercent" role="progressbar" class="progress-bar progress-bar-success">
                                <span class="sr-only">@Model.DeliveryLastMonthPercent</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-6">
                                <small class="stats-label">Ontime</small>
                                <h4>@Model.DeliveryLastMonthOntime</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Delay</small>
                                <h4>@Model.DeliveryLastMonthDelay</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <small class="stats-label">Pending</small>
                                <h4>@Model.DeliveryLastMonthPending</h4>
                            </div>

                            <div class="col-xs-6">
                                <small class="stats-label">Exclude</small>
                                <h4>@Model.DeliveryLastMonthExclude</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    This is standard panel footer
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="hpanel stats">
                <div class="panel-body h-200">
                    <div class="stats-title pull-left">
                        <h4>
                            Delay Shipment Count
                        </h4>
                    </div>
                    <div class="stats-icon pull-right">
                        <i class="pe-7s-monitor fa-4x"></i>
                    </div>
                    <div class="m-t-xl">
                        <h1 class="text-success">@Model.AcceptLastMonthDelay </h1>
                        <span class="font-bold no-margins">
                            Reason accept delay
                        </span>
                        <br />
                        <small>
                            No available.
                        </small>
                    </div>
                </div>
                <div class="panel-footer">
                    This is standard panel footer
                </div>
            </div>
        </div>
        
    </div>
</div>


@section Styles {
    @Styles.Render("~/bundles/sweetAlert/css")
    @Styles.Render("~/bundles/toastr/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/sweetAlert/js")
    @Scripts.Render("~/bundles/toastr/js")
    @Scripts.Render("~/bundles/flot/js")
    @*<script src="~/Scripts/jquery-2.2.3.min.js"></script>*@
    <script type="text/javascript">
        $(function () {
            /**
             * Flot charts data and options
             */

            //var data1 = [[0, 55], [1, 48], [2, 40], [3, 36], [4, 40], [5, 60], [6, 50], [7, 51], [8, 60], [9, 40], [10, 31], [11, 31]];
            //var data2 = [[0, 56], [1, 49], [2, 41], [3, 38], [4, 46], [5, 67], [6, 57], [7, 59], [8, 68], [9, 50], [10, 41], [11, 61]];
            var data1 = [[0, @Model.DN01], [1, @Model.DN02], [2, @Model.DN03], [3, @Model.DN04], [4, @Model.DN05], [5, @Model.DN06], [6, @Model.DN07], [7, @Model.DN08], [8, @Model.DN09], [9, @Model.DN10], [10, @Model.DN11], [11, @Model.DN12]];
            var data2 = [[0, @Model.SH01], [1, @Model.SH02], [2, @Model.SH03], [3, @Model.SH04], [4, @Model.SH05], [5, @Model.SH06], [6, @Model.SH07], [7, @Model.SH08], [8, @Model.SH09], [9, @Model.SH10], [10, @Model.SH11], [11, @Model.SH12]];
            var chartUsersOptions = {
                xaxis: {
                    ticks: [[0, 'Jan'], [1, 'Feb'], [2, 'Mar'], [3, 'Apr'], [4, 'May'], [5, 'Jun'], [6, 'Jul'], [7, 'Aug'], [8, 'Sep'], [9, 'Oct'], [10, 'Nov'], [11, 'Dec']]
                },
                series: {
                    splines: {
                        show: true,
                        tension: 0.4,
                        lineWidth: 1,
                        fill: 0.4
                    },
                },
                grid: {
                    tickColor: "#f0f0f0",
                    borderWidth: 1,
                    borderColor: 'f0f0f0',
                    color: '#6a6c6f'
                },
                colors: ["#62cb31", "#efefef"],
            };

            $.plot($("#flot-line-chart"), [data1, data2], chartUsersOptions);

        });
    </script>
}